@model OnlineLibraryManagement.Models.Docgia

@{
    ViewData["Title"] = "Tài khoản";
    Layout = "~/Views/Shared/_ReaderLayout.cshtml";
}

<h2 class="text-center mb-3 mt-5">Thông tin tài khoản</h2>

    <dl class="row ms-auto me-auto p-4 rounded-3 shadow bg-light" style="width:27em">
        <dt class = "col-sm-6 border-end">
            @Html.DisplayNameFor(model => model.MatkNavigation.Tentk)
        </dt>
        <dd class = "col-sm-6">
            @Model.MatkNavigation.Tentk
        </dd>
        <dt class = "col-sm-6 border-end pt-1">
            @Html.DisplayNameFor(model => model.Tendocgia)
        </dt>
        <dd class = "col-sm-6 pt-1">
		@if (Model.Tendocgia != null)
			@Model.Tendocgia
		else
		{
			<text>--</text>
		}
        </dd>
        <dt class = "col-sm-6 border-end pt-1">
            @Html.DisplayNameFor(model => model.Ngaysinh)
        </dt>
        <dd class = "col-sm-6 pt-1">
        @{
            if (Model.Ngaysinh != null) @Model.Ngaysinh.Value.ToShortDateString()
            else
            {
                <text>--/--</text>
            }
        }
        </dd>
        <dt class = "col-sm-6 border-end pt-1">
            @Html.DisplayNameFor(model => model.MatkNavigation.Email)
        </dt>   
        <dd class = "col-sm-6 pt-1">
            @Model.MatkNavigation.Email
        </dd> 
</dl>
<div class="text-center mt-4">
    <a asp-action="frmSuaTaikhoan" asp-route-id="@Model.Madocgia" class="btn btn-primary me-2">
        <i class="fa-solid fa-pen-to-square me-1" style="color: #ffffff;"></i>Chỉnh sửa thông tin
    </a>
    <a asp-action="frmDoiMatkhau" asp-route-id="@Model.Madocgia" class="btn btn-danger">
        <i class="fa-solid fa-key me-1" style="color: #ffffff;"></i>Thay đổi mật khẩu
    </a>
</div>
