@model OnlineLibraryManagement.Models.Docgia

@{
    ViewData["Title"] = "Tài khoản";
    Layout = "~/Views/Shared/_ReaderLayout.cshtml";
}

<h1>Thông tin tài khoản</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MatkNavigation.Tentk)
        </dt>
        <dd class = "col-sm-10">
            @Model.MatkNavigation.Tentk
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tendocgia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tendocgia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ngaysinh)
        </dt>
        <dd class = "col-sm-10">
            @{
                if (Model.Ngaysinh != null) @Model.Ngaysinh.Value.ToShortDateString()
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MatkNavigation.Email)
        </dt>
        <dd class = "col-sm-10">
            @Model.MatkNavigation.Email
        </dd> 
    </dl>
</div>
<div>
    <a asp-action="frmSuaTaikhoan" asp-route-id="@Model.Madocgia" class="btn btn-primary">Chỉnh sửa thông tin</a>
    <a asp-action="frmDoiMatkhau" asp-route-id="@Model.Madocgia" class="btn btn-primary">Thay đổi mật khẩu</a>
</div>
