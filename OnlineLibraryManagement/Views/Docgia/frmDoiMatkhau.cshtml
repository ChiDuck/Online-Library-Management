@model OnlineLibraryManagement.Models.Taikhoan

@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_ReaderLayout.cshtml";
}

<div class="row pt-4 pb-4 ms-auto me-auto rounded-3 shadow bg-light" style="width:25em; margin-top:6rem">
    <div class="col-1"></div>
    <div class="col">
        <h3 class="text-center mb-4">Thay đổi mật khẩu</h3>
        <form asp-action="doiMatkhau" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Matkhaucu" class="control-label"></label>
                <input type="password" asp-for="Matkhaucu" class="form-control" />
                <span asp-validation-for="Matkhaucu" class="text-danger"></span>
			</div>
			<div class="form-group mt-3">
				<label asp-for="Matkhau" class="control-label">Mật khẩu mới</label>
                <input type="password" asp-for="Matkhau" class="form-control" />
				<span asp-validation-for="Matkhau" class="text-danger"></span>
			</div>
            <div class="form-group mt-3">
                <label asp-for="Nhaplaimatkhau" class="control-label"></label>
                <input type="password" asp-for="Nhaplaimatkhau" class="form-control" />
                <span asp-validation-for="Nhaplaimatkhau" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group text-center">
                <input type="submit" value="Lưu" class="btn btn-primary me-2" />
				<a asp-action="Taikhoan" class="btn btn-danger">Hủy</a>
            </div>
        </form>
    </div>
    <div class="col-1"></div>
</div>
