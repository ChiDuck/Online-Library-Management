@model OnlineLibraryManagement.MyModels.CTheloai

@{
    ViewData["Title"] = "Xóa thể loại";
    Layout = "~/Views/Shared/_LibrarianLayout.cshtml";
}
@if (ViewBag.flag == true)
{
    <h1>Xóa thể loại</h1>
}
else
{
    <h1>Bạn không thể xóa thể loại này</h1>
}
<div>
    <hr />
    <dl class="row">
        @* <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Maloai)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Maloai)
        </dd> *@
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tenloai)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tenloai)
        </dd>
    </dl>
    @if (ViewBag.flag == true)
    {
        <h3>Bạn có chắc chắn muốn xóa thể loại @Model.Tenloai?</h3>
        <form asp-action="xoaTheloai" method="post">
            <input type="hidden" name="id" value="@Model.Maloai" />
            <input type="submit" value="Xóa" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-primary">Trở lại</a>
        </form>
    }
    else
    {
        <h3>Đã tồn tại cuốn sách thuộc thể loại @Model.Tenloai</h3>
        <a asp-action="Index" class="btn btn-primary">Trở lại</a>
    }
   
</div>
