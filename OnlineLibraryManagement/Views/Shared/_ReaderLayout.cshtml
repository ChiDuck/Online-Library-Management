<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - STU-LIB</title>
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineLibraryManagement.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header class="sticky-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow" style="background-color:rgb(98, 127, 217)">
            <div class="container-fluid">
                <div class="navbar-brand text-light fw-bold me-4" asp-area="" asp-controller="Docgia" asp-action="Index">STU-LIB</div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 col-lg-9">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Docgia" asp-action="Index">
                                <i class="fa-solid fa-house me-1" style="color: #ffffff;"></i>Trang chủ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Docgia" asp-action="timSach">
                                <i class="fa-solid fa-book me-1" style="color: #ffffff;"></i>Sách
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Docgia" asp-action="dsPhieumuonsach">
                                <i class="fa-solid fa-pager me-1" style="color: #ffffff;"></i>Phiếu mượn
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Docgia" asp-action="dsPhieutrasach">
                                <i class="fa-solid fa-calendar-check me-1" style="color: #ffffff;"></i>Phiếu trả
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Docgia" asp-action="dsPhieugiahan">
                                <i class="fa-solid fa-clock me-1" style="color: #ffffff;"></i>Phiếu gia hạn
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav flex-grow-1 col-lg-2">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Docgia" asp-action="Taikhoan">
                                <i class="fa-solid fa-user" style="color: #ffffff;"></i>
                                @{
                                    if (User.Identity.Name == "User") 
                                    {
                                        <text>Tài khoản</text>
                                    }
                                    else
                                    {
                                        <b>@User.Identity.Name</b>
                                    }
                                }
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Logout">
                                <i class="fa-solid fa-right-from-bracket me-1" style="color: #ffffff;"></i>Đăng xuất
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-auto">
        <div class="container">
			<h4><b>STU-LIB</b></h4>
            <p>Thư viện điện tử</p>
            &copy; 2024 - Đặng Minh Nghĩa & Nguyễn Chí Đức
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/script.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
