@model OnlineLibraryManagement.Models.Thuthu

@{
	ViewData["Title"] = "Tài khoản";
	Layout = "~/Views/Shared/_LibrarianLayout.cshtml";
}

<h1 class="text-center mb-3 mt-5">Thông tin tài khoản</h1>

<dl class="row ms-auto me-auto p-4 bg-light" style="width:27em">
	<dt class="col-sm-5 border-end">
		@Html.DisplayNameFor(model => model.MatkNavigation.Tentk)
	</dt>
	<dd class="col-sm-7">
		@Model.MatkNavigation.Tentk
	</dd>
	<dt class="col-sm-5 border-end pt-1">
		@Html.DisplayNameFor(model => model.Tentt)
	</dt>
	<dd class="col-sm-7 pt-1">
		@if (Model.Tentt != null)
			@Model.Tentt
		else
		{
			<text>--</text>
		}
	</dd>
	<dt class="col-sm-5 border-end pt-1">
		@Html.DisplayNameFor(model => model.Sdt)
	</dt>
	<dd class="col-sm-7 pt-1">
		@{
			if (Model.Sdt != null)
				@Model.Sdt
			else
			{
				<text>--</text>
			}
		}
	</dd>
	<dt class="col-sm-5 border-end pt-1">
		@Html.DisplayNameFor(model => model.MatkNavigation.Email)
	</dt>
	<dd class="col-sm-7 pt-1">
		@Model.MatkNavigation.Email
	</dd>
</dl>
<div class="text-center mt-4">
	<a asp-action="frmSuaTaikhoan" asp-route-id="@Model.Matt" class="btn btn-primary me-2">
		<i class="fa-solid fa-pen-to-square me-1" style="color: #ffffff;"></i>Chỉnh sửa thông tin
	</a>
	<a asp-action="frmDoiMatkhau" asp-route-id="@Model.Matt" class="btn btn-danger">
		<i class="fa-solid fa-key me-1" style="color: #ffffff;"></i>Thay đổi mật khẩu
	</a>
</div>
