@model OnlineLibraryManagement.MyModels.CTacgia

@{
    ViewData["Title"] = "frmSuaTacgia";
    Layout = "~/Views/Shared/_LibrarianLayout.cshtml";
}

<h1>Sửa tác giả</h1>

<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="suaTacgia" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Matacgia" class="control-label"></label>
                <input type="hidden" asp-for="Matacgia" class="form-control" />
                <span asp-validation-for="Matacgia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tentacgia" class="control-label"></label>
                <input asp-for="Tentacgia" class="form-control" />
                <span asp-validation-for="Tentacgia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ngaysinh" class="control-label"></label>
                <input type="date" asp-for="Ngaysinh" class="form-control" />
                <span asp-validation-for="Ngaysinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quoctich" class="control-label"></label>
                <input asp-for="Quoctich" class="form-control" />
                <span asp-validation-for="Quoctich" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Trở lại</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
