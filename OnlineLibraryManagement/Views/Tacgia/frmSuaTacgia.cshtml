@model OnlineLibraryManagement.MyModels.CTacgia

@{
	ViewData["Title"] = "frmSuaTacgia";
	Layout = "~/Views/Shared/_LibrarianLayout.cshtml";
}

<div class="mx-auto" style="width:42em">
	<div class="mt-5 d-flex">
		<h2 style="margin-bottom:0">Sửa tác giả</h2>
		<a asp-action="Index" class="btn bg-light ms-auto">
			<i class="fa-solid fa-angle-left me-1"></i>Trở lại danh sách
		</a>
	</div>
	<hr />
</div>
<div class="row mx-auto pt-4 pb-4 bg-light" style="width:30em">
	<div class="col-1"></div>
	<div class="col">
		<form asp-action="suaTacgia" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<input type="hidden" asp-for="Matacgia" class="form-control" />
			<div class="form-group">
				<label asp-for="Tentacgia" class="control-label"></label>
				<input asp-for="Tentacgia" class="form-control" />
				<span asp-validation-for="Tentacgia" class="text-danger"></span>
			</div>
			<div class="form-group mt-3">
				<label asp-for="Ngaysinh" class="control-label"></label>
				<input type="date" asp-for="Ngaysinh" class="form-control" />
				<span asp-validation-for="Ngaysinh" class="text-danger"></span>
			</div>
			<div class="form-group mt-3">
				<label asp-for="Ngaymat" class="control-label"></label>
				<input type="date" asp-for="Ngaymat" class="form-control" />
				<span asp-validation-for="Ngaymat" class="text-danger"></span>
			</div>
			<div class="form-group mt-3">
				<label asp-for="Quoctich" class="control-label"></label>
				<input asp-for="Quoctich" class="form-control" />
				<span asp-validation-for="Quoctich" class="text-danger"></span>
			</div>
			<br />
			<div class="form-group text-center">
				<input type="submit" value="Lưu" class="btn btn-success" />
			</div>
		</form>
	</div>
	<div class="col-1"></div>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
