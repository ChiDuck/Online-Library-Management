@model IEnumerable<OnlineLibraryManagement.MyModels.CNhaxuatban>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LibrarianLayout.cshtml";
}

<h1>Danh sách nhà xuất bản</h1>

<p>
    <a asp-action="frmThemNhaxuatban" class="btn btn-primary">Thêm nhà xuất bản</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Manxb)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tennxb)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diachi)
            </th>
            <th>
                Tác vụ
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Manxb)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tennxb)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diachi)
            </td>
            <td>
                <a asp-action="frmSuaNhaxuatban" asp-route-id="@item.Manxb" class="btn btn-primary">Sửa</a>
                <a asp-action="frmXoaNhaxuatban" asp-route-id="@item.Manxb" class="btn btn-danger">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
