@model IEnumerable<OnlineLibraryManagement.MyModels.CNhaxuatban>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_LibrarianLayout.cshtml";
}

<h1 class="mt-4 mb-4">Danh sách nhà xuất bản</h1>

<p>
	<a data-bs-toggle="modal" data-bs-target="#formModal" class="btn btn-success" style="padding-left:1em">
		<i class="fa-solid fa-plus me-2" style="color: #ffffff;"></i>Thêm nhà xuất bản
	</a>
</p>
<div class="p-3 bg-light">
	<table class="table overflow-hidden border-top table-hover">
		<thead class="border-top border-dark align-middle table-bordered">
			<tr>
				<th class="text-center">
					@Html.DisplayNameFor(model => model.Manxb)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Tennxb)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Email)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Diachi)
				</th>
				<th class="text-center border-start" style="width: 7em">
					Tác vụ
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td class="text-center">
						@Html.DisplayFor(modelItem => item.Manxb)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Tennxb)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Email)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Diachi)
					</td>
					<td class="text-center border-start">
						<a asp-action="frmSuaNhaxuatban" asp-route-id="@item.Manxb" class="btn btn-primary mb-2">
							<i class="fa-solid fa-pen-to-square" style="color: #ffffff;"></i>
						</a>
						<a asp-action="frmXoaNhaxuatban" asp-route-id="@item.Manxb" class="btn btn-danger">
							<i class="fa-solid fa-trash" style="color: #ffffff"></i>
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

<div class="container">
	<div class="modal fade" id="formModal" tabindex="-1" aria-labelledby="formModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<div class="modal-header">
					<h4 class="modal-title mt-1">Thêm nhà xuất bản</h4>
					<button type="button" class="btn-close me-1" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body ms-4 me-4">
					<div class="mb-3">
						<label class="form-label">
							@Html.DisplayNameFor(model => model.Tennxb)
						</label>
						<input class="form-control" id="tennxb">
						<p class="text-danger" id="validten"></p>
					</div>
					<div class="mb-3">
						<label class="form-label">
							@Html.DisplayNameFor(model => model.Email)
						</label>
						<input class="form-control" id="email" />
					</div>
					<div>
						<label class="form-label">
							@Html.DisplayNameFor(model => model.Diachi)
						</label>
						<input class="form-control" id="diachi" />
					</div>
				</div>
				<div class="modal-footer border-0">
					<input type="button" value="Thêm" onclick="themNxb()" class="btn btn-success me-4 mb-3" />
				</div>
			</div>
		</div>
	</div>
</div>
