@model OnlineLibraryManagement.MyModels.CNhaxuatban

@{
    ViewData["Title"] = "frmSuaNhaxuatban";
    Layout = "~/Views/Shared/_LibrarianLayout.cshtml";
}

<div class="mx-auto" style="width:42em">
    <div class="mt-5 d-flex">
        <h2 style="margin-bottom:0">Sửa nhà xuất bản</h2>
        <a asp-action="Index" class="btn bg-light ms-auto">
            <i class="fa-solid fa-angle-left me-1"></i>Trở lại danh sách
        </a>
    </div>
    <hr />
</div>
<div class="row mx-auto pt-4 pb-4 bg-light" style="width:30em">
    <div class="col-1"></div>
    <div class="col">
        <form asp-action="suaNhaxuatban" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Manxb" class="form-control" />
            <div class="form-group">
                <label asp-for="Tennxb" class="control-label"></label>
                <input asp-for="Tennxb" class="form-control" />
                <span asp-validation-for="Tennxb" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Diachi" class="control-label"></label>
                <input asp-for="Diachi" class="form-control" />
                <span asp-validation-for="Diachi" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group text-center">
                <input type="submit" value="Lưu" class="btn btn-success" />
            </div>
        </form>
    </div>
    <div class="col-1"></div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
