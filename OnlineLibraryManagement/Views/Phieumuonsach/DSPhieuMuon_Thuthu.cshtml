@model IEnumerable<OnlineLibraryManagement.Models.Phieumuonsach>

@{
	ViewData["Title"] = "Phiếu mượn sách";
	Layout = "~/Views/Shared/_LibrarianLayout.cshtml";
}
<h1 class="mt-4 mb-4">Danh sách phiếu mượn</h1>
<div class="p-3 bg-light">
	<table class="table overflow-hidden border-top align-middle table-hover">
		<thead class="border-top border-dark table-bordered">
			<tr>
				<th class="text-center">
					@Html.DisplayNameFor(model => model.Maphieu)
				</th>
				<th class="text-center">
					@Html.DisplayNameFor(model => model.Ngaylapphieu)
				</th>
				<th class="text-center">
					@Html.DisplayNameFor(model => model.Hantra)
				</th>
				<th class="text-center">
					@Html.DisplayNameFor(model => model.Soluongsach)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Matinhtrang)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Matt)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Madocgia)
				</th>
				<th class="text-center border-start" style="width: 7em">
					Tác vụ
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td class="text-center">
						@Html.DisplayFor(modelItem => item.Maphieu)
					</td>
					<td class="text-center">
						@if (item.Ngaylapphieu != null)
						{
							@item.Ngaylapphieu.Value.ToShortDateString()
						}
					</td>
					<td class="text-center">
						@if (item.Hantra != null)
						{
							@item.Hantra.Value.ToShortDateString()
						}
						else
						{
							<text>--/--</text>
						}
					</td>
					<td class="text-center">
						@Html.DisplayFor(modelItem => item.Soluongsach)
					</td>
					<td>
						@if (item.MatinhtrangNavigation != null)
						{
							<b>@item.MatinhtrangNavigation.Tentinhtrang</b>
						}
					</td>
					<td>
						@if (item.MattNavigation != null)
						{
							@item.MattNavigation.Tentt
						}
						else
						{
							<div class="text-center me-5">#</div>
						}
					</td>
					<td>
						@if (item.MadocgiaNavigation != null)
						{
							@item.MadocgiaNavigation.Tendocgia
						}
					</td>
					<td class="text-center border-start">
						<a asp-action="formXemCTPhieuMuon" class="btn btn-primary" asp-route-maphieumuon="@item.Maphieu">
							<i class="fa-solid fa-circle-info fa-lg" style="color: #ffffff;"></i>
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

@if (TempData["Message"] != null)
{
	<script>
		alert('@Html.Raw(TempData["Message"])');
	</script>
}